{
  "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "declarationMap": true,
      "outDir": "build",
      "strict": true,
      "declaration": true,
      "lib": [
          "es2021",
          "DOM"
      ],
  },
  "include": [
      "src/**/*",
  ]
}